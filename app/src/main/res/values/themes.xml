<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Music_Download6_Ms3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_of_home_fragment">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="more_of_home_fragment">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#01DCC2</item>
    </style>

    <style name="specific_rounded_corner">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="image_item_genres">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="image_item_downloaded">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="text_large_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme_Dialog_Bottom" parent="Theme.AppCompat.Light.Dialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="check_box_of_dialog_setting">
        <item name="paddingEnd">16dp</item>
        <item name="android:drawableEnd">@drawable/custom_checkbox</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:button">@null</item>
    </style>

    <style name="button_screen_setting">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="paddingStart">16dp</item>
        <item name="android:drawablePadding">14dp</item>
    </style>

    <style name="MineCustomTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#01DCC2</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>