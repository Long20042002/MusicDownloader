<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_item_trending">

        <ImageView
            android:id="@+id/ivItemTopTrending"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="208:265"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ivBgTextTrending"
            android:src="@drawable/ic_shape_tv_item_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"

            app:layout_constraintBottom_toBottomOf="@id/ivItemTopTrending"
            app:layout_constraintEnd_toEndOf="@+id/ivItemTopTrending"
            app:layout_constraintStart_toStartOf="@id/ivItemTopTrending"/>

        <ImageView
            android:id="@+id/ivPlayTrendingMusic"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/play_top_rating"

            app:layout_constraintEnd_toEndOf="@id/ivBgTextTrending"
            app:layout_constraintBottom_toTopOf="@id/ivBgTextTrending"
            app:layout_constraintTop_toTopOf="@id/ivBgTextTrending"/>

        <TextView
            android:id="@+id/tvNameSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/loren_suppppppp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:maxLines="1"

            app:layout_constraintEnd_toStartOf="@id/ivPlayTrendingMusic"
            app:layout_constraintTop_toTopOf="@id/ivBgTextTrending"
            app:layout_constraintStart_toStartOf="@id/ivBgTextTrending"/>

        <TextView
            android:id="@+id/tvNameSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loren_suppppppp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"

            app:layout_constraintTop_toBottomOf="@id/tvNameSong"
            app:layout_constraintStart_toStartOf="@id/ivBgTextTrending"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>