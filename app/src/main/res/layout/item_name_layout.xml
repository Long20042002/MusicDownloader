<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:id="@+id/layout_item_pl"
    android:background="#1B1A21">

    <androidx.cardview.widget.CardView
        android:id="@+id/ivPlayList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#414141"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:src="@drawable/ic_play_list_active"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNamePL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/loren_suppppppp"
        android:textSize="14sp"
        android:textColor="@color/white"

        app:layout_constraintLeft_toRightOf="@+id/ivPlayList"
        app:layout_constraintBottom_toBottomOf="@id/ivPlayList"
        app:layout_constraintTop_toTopOf="@id/ivPlayList"/>

</androidx.constraintlayout.widget.ConstraintLayout>