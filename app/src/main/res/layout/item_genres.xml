<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_genres"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivGenres"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/image_item_genres" />

    <TextView
        android:id="@+id/tvNameGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dubstep"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/ivGenres"
        app:layout_constraintEnd_toEndOf="@id/ivGenres"
        app:layout_constraintTop_toTopOf="@id/ivGenres"
        app:layout_constraintStart_toStartOf="@id/ivGenres"/>

</androidx.constraintlayout.widget.ConstraintLayout>